<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar_novedades" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label>Imagen: <input class="form-control" type="file" name="imagen" id="imagen" />
                    </label>
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo" />
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
              <h5>{{message}}</h5>
            {{/if}}

        </div>
    </div>
</div>