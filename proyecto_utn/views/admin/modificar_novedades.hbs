<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar las novedades id: {{novedades.id}}</h4>
            <form action="/admin/novedades/modificar_novedades" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedades.id}}" name="id">
                


                <div class="mb-3">
                    <p>
                        <label for="imagen">Imágen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imágen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedades.img_id}}">
                    </p>
                </div>
                
                <div class="mb-3">
                    <label for="">Título</label>
                    <input type="text" class="form-control" placeholder="Titulo" value="{{novedades.titulo}}"
                        name="titulo">
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
              <h5>{{message}}</h5>
            {{/if}}

        </div>
    </div>
</div>