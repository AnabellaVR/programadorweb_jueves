<div class="container" style="margin: 50px auto;">
    <div class="row">
        <div class="col">
            <p class="text-end">Hola {{usuario}}!
                <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión <i
                        class="fa fa-sign-out"></i></a>
            </p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-7" style="margin-top: 9px;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success "><i class="fa fa-plus me-2"></i>Nuevo</a>
        </div>
    </div>
    {{!-- fin fila 2 --}}
    {{!-- inicio fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table table-bordered table-hover">
                <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col" class="text-center">Imagen</th>
                        <th scope="col" class="text-center">Título</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{{imagen}}}</td>
                        <td>{{titulo}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary me-1"><i
                                    class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                                    class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>