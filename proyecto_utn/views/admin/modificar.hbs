<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar los almohadones id: {{almohadones.id}}</h4>
            <form action="/admin/almohadones/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{almohadones.id}}" name="id">
                <div class="mb-3">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imágen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{almohadones.img_id}}">
                    </p>
                </div>
                <div class="mb-3">
                    <label for="">Título</label>
                    <input type="text" class="form-control" placeholder="Titulo" value="{{almohadones.titulo}}"
                        name="titulo">
                </div>
                <div class="mb-3">
                    <label for="">Cuerpo</label>
                    <textarea class="form-control" name="cuerpo">{{almohadones.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}

        </div>
    </div>
</div>